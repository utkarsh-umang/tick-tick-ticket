{
  "manifest_version": 2,
  "name": "Tick Tick Ticket",
  "version": "1.0",
  "description": "Helps in booking tickets",
  "permissions": [
    "activeTab",
    "tabs",
    "https://in.bookmyshow.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://in.bookmyshow.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}